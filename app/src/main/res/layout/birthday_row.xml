<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:elevation="7dp"
        android:background="#DDD9D9"
        app:contentPadding="0dp"
        app:cardCornerRadius="7dp"
        android:layout_margin="5dp"
        android:padding="0dp"
        android:foreground="?selectableItemBackground">


        <LinearLayout
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/profile_pic_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/user_icon"
                    android:padding="5dp"
                    android:text="A"
                    android:textSize="38sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_tv"
                    android:paddingLeft="15dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Name"
                    android:background="#4CAF50"
                    android:textColor="#F8FAF8"
                    android:textAllCaps="true"
                    android:textSize="16dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:scaleX="10"
                    android:src="@drawable/line_separator"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/birthdate_tv"
                    android:paddingVertical="2dp"
                    android:drawableLeft="@drawable/birthday"
                    android:drawablePadding="5dp"
                    android:text="Birthdate"
                    android:textColor="#363535"
                    android:textSize="15dp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weightSum="2"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal">


                    <Button
                        android:layout_weight="1"
                        android:id="@+id/call_btn"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:background="@drawable/border_button"
                        android:drawableLeft="@drawable/phone"
                        android:padding="5dp"
                        android:layout_marginHorizontal="20dp"
                        android:text="Call" />

                    <Button
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:background="@drawable/border_button"
                        android:text="SMS"
                        android:layout_marginHorizontal="20dp"
                        android:drawableLeft="@drawable/message"
                        android:drawablePadding="4dp"
                        android:padding="8dp"
                        android:id="@+id/sms_btn"/>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>