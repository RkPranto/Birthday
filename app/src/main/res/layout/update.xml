<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_gravity="center_horizontal"
        xmlns:app="http://schemas.android.com/apk/res-auto">

        <LinearLayout
            android:orientation="vertical"
            android:background="@android:color/transparent"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:weightSum="8"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_weight="7"
                    android:text="Make Change"
                    android:textSize="22dp"
                    android:textColor="#FFF"
                    android:layout_width="0dp"
                    android:layout_height="?attr/actionBarSize"
                    android:elevation="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/toolbar"
                    />

                <Button
                    android:id="@+id/cancel_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/cancel" />

            </LinearLayout>


            <LinearLayout android:orientation="vertical"
                android:background="#FFFFFF"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:theme="@style/TextInputLayoutHint"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@drawable/person"
                        android:drawablePadding="12dp"
                        android:inputType="textCapWords"
                        android:id="@+id/name_et"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginBottom="10dp"
                        android:hint="Name"
                        android:padding="7dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:theme="@style/TextInputLayoutHint"
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@drawable/contact"
                        android:drawablePadding="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="Contact"
                        android:inputType="phone"
                        android:id="@+id/contact_et"
                        android:padding="7dp"
                        android:layout_marginBottom="10dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/birthday"
                    android:layout_marginBottom="10dp"
                    android:text="Select Birthday"
                    android:textColor="#FFF"
                    android:drawableLeft="@drawable/birthday_white"
                    android:paddingLeft="20dp"
                    android:foreground="?selectableItemBackground"
                    android:background="#4CAF50"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/check_noti"
                    android:text="Notification"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="@color/colorBlackish"
                    android:buttonTint="@color/colorgreen"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:id="@+id/check_auto"
                    android:text="Auto wish sending"
                    android:layout_marginLeft="15dp"
                    android:backgroundTint="@color/colorBlackish"
                    android:buttonTint="@color/colorgreen"
                    />


                <LinearLayout
                    android:id="@+id/auto_or_not"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/message_time"
                        android:layout_marginBottom="10dp"
                        android:text="Select Message Time"
                        android:textColor="#FFF"
                        android:drawableLeft="@drawable/time"
                        android:paddingLeft="20dp"
                        android:foreground="?selectableItemBackground"
                        android:background="#4CAF50"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:theme="@style/TextInputLayoutHint"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:drawableLeft="@drawable/message"
                            android:layout_marginTop="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/wish_et"
                            android:hint="Wish Message"
                            android:paddingLeft="15dp"
                            android:drawablePadding="12dp"
                            android:layout_marginBottom="10dp"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>



                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <Button
                        android:id="@+id/delete_btn"
                        android:text="Delete"
                        android:layout_weight="1"
                        android:textColor="#FFF"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:elevation="7dp"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/button"
                        />

                    <Button
                        android:id="@+id/update_btn"
                        android:layout_weight="1"
                        android:elevation="7dp"
                        android:layout_marginHorizontal="5dp"
                        android:text="Update"
                        android:textColor="#FFF"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/button"
                        />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>

