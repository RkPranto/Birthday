<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">



    <androidx.cardview.widget.CardView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:elevation="7dp"
        android:background="#DDD9D9"
        app:contentPadding="0dp"
        app:cardCornerRadius="7dp"
        android:layout_margin="5dp"
        android:padding="0dp"
        android:foreground="?selectableItemBackground"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <LinearLayout
            android:weightSum="11"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/profile_pic_iv"
                    android:paddingRight="10dp"
                    android:layout_margin="10dp"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/icon" />
            </LinearLayout>


            <LinearLayout
                android:layout_weight="8"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/name_tv"
                    android:paddingLeft="15dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:text="Name"
                    android:background="#4CAF50"
                    android:textColor="#F8FAF8"
                    android:textAllCaps="true"
                    android:textSize="16dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contact_tv"
                    android:paddingVertical="2dp"
                    android:drawableLeft="@drawable/phone"
                    android:drawablePadding="5dp"
                    android:text="Contact"
                    android:textColor="#363535"
                    android:textSize="15dp"
                    />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:scaleX="10"
                    android:src="@drawable/line_separator"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/birthdate_tv"
                    android:paddingVertical="2dp"
                    android:drawableLeft="@drawable/birthday"
                    android:drawablePadding="5dp"
                    android:text="Birthdate"
                    android:textColor="#363535"
                    android:textSize="15dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_marginTop="30dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/notification_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notifications_active"
                    android:layout_marginBottom="12dp"/>

                <ImageView
                    android:id="@+id/msg_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/message"
                    />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>