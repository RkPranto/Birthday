<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="7dp"
    android:background="#DDD9D9"
    app:contentPadding="0dp"
    app:cardCornerRadius="7dp"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground"
    xmlns:android="http://schemas.android.com/apk/res/android">
    
    
    <LinearLayout
        android:weightSum="5"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/profile_pic_iv"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/icon" />
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="4"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/name_tv"
                android:paddingLeft="15dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="Name"
                android:background="#501CB8"
                android:textColor="#F8FAF8"
                android:textAllCaps="true"
                android:textSize="18dp"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contact_tv"
                android:padding="5dp"
                android:drawableLeft="@drawable/phone"
                android:drawablePadding="5dp"
                android:text="Contact"
                android:textColor="#363535"
                android:textSize="18dp"
                />

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="3dp"

               android:scaleX="10"
               android:src="@drawable/line_separator"
               />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/birthdate_tv"
                android:padding="5dp"
                android:drawableLeft="@drawable/birthday"
                android:drawablePadding="5dp"
                android:text="Birthdate"
                android:textColor="#363535"
                android:textSize="18dp"
                />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>